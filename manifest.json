{

    "manifest_version": 2,
    "name": "playbetter",
    "version": "1.0",

    "description": "Adds syntax highlighting to go playground.",

    "permissions": [
        "activeTab"
    ],

    "background": {
        "scripts": ["background.js"]
    },

    "content_scripts": [
        {
            "matches": ["*://play.golang.org/*"],
            "js": [
                "lib/codemirror.js",
                "mode/go/go.js",
                "mode/emacs.js",
                "mode/vim.js",
                "content_scripts/playground.js",
                "content_scripts/playbetter.js"],
            "css": ["style/codemirror.css"]
        }
    ]

}
